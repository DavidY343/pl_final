(defun collatz (n cont)
(setq collatz_retorno 0)
(prin1 ( n )) (prin1  )
(if (== ( n ) 1)
(setf cont ( cont ))
(if (== (mod ( n ) 2) 0)
(setf cont ( collatz (/ ( n ) 2) (+ ( cont ) 1) ))
(setf cont ( collatz (+ (* 3 ( n )) 1) (+ ( cont ) 1) ))
)
)
return-from collatz ( collatz_retorno )
)
(defun main ()
(setq main_resultado 0)
(setq main_i 0)
(print "Sucesion de Collatz")
(setf main_i 2)
(loop while (< ( main_i ) 100) do 
(setf main_i ( collatz ( main_i ) 0 ))
(prin1 ( main_i )) (prin1  ) (prin1 ( main_resultado ))
